<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FreeBoardFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/board_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="40dp"
        android:baselineAlignBottom="true"
        android:src="@drawable/ic_writing"
        android:text="글쓰기"
        app:layout_constraintBottom_toBottomOf="@+id/board_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/board_recyclerView"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>