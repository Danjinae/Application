<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.community.BoardInfoActivity">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/text_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="30sp"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/text_post_contents"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/text_post_title"
        android:text="content"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/input_comment"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_below="@+id/text_post_contents"
        android:layout_marginTop="0dp"
        android:hint="댓글 입력" />

    <Button
        android:id="@+id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_comment"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/input_comment"
        android:text="등록" />

    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/input_comment"/>

</RelativeLayout>